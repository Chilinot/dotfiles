# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file, do not look any further!
root = true

# General settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{py,rs}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{c,cpp}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[{Makefile,*.java}]
indent_style = tab
